
@{
    ViewBag.Title = "UpdateInformation";
}

<h2>Update Product Information</h2>
<p>@ViewBag.ProductName</p>
<div class="row">
    @using (Html.BeginForm("UpdateProduct", "Update", FormMethod.Post))
    {
        <p>Product Code: @Html.TextBox("productCode")</p>
        <p>Product Name:  @Html.TextBox("ProductName")</p>
        <p>Product Price:  @Html.TextBox("UnitPrice")</p>
        <p>Quantity on Hand:  @Html.TextBox("QuantityOnHand")</p>
        <input type="submit" value="Update" />

    }
</div>

